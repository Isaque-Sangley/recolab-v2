[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific errors:
# E203: Whitespace before ':'
# E266: Too many leading '#' for block comment
# E501: Line too long (handled by black)
# W503: Line break before binary operator
# W504: Line break after binary operator
# E402: Module level import not at top of file
# W291: Trailing whitespace (handled by black)
# F401: Module imported but unused (common in __init__.py and type hints)
# F541: f-string without placeholders (cosmetic issue)
# F841: Local variable assigned but never used (often intentional)
ignore = E203,E266,E501,W503,W504,E402,W291,F401,F541,F841

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    migrations,
    .pytest_cache,
    htmlcov,
    *.egg-info

# Files per directory
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F811

# Show source code for errors
show-source = True

# Count errors
count = True

# Statistics at the end
statistics = True